<project name="Nuxeo Web UI" default="build" basedir=".">

  <!-- set executable names based on OS family -->
  <condition property="cmd.npm" value="npm.cmd" else="npm">
    <os family="windows"/>
  </condition>
  <condition property="cmd.bower" value="bower.cmd" else="bower">
    <os family="windows"/>
  </condition>
  <condition property="cmd.gulp" value="gulp.cmd" else="gulp">
    <os family="windows"/>
  </condition>
  <condition property="cmd.mvn" value="mvn.cmd" else="mvn">
    <os family="windows"/>
  </condition>

  <target name="init" description="Download all node and web dependencies">
    <delete includeEmptyDirs="yes" failonerror="false">
      <fileset dir="node_modules" defaultexcludes="no" followsymlinks="false" />
      <fileset dir="bower_components" defaultexcludes="no" followsymlinks="false" />
    </delete>
    <exec executable="${cmd.npm}" failonerror="true">
      <arg value="install" />
    </exec>
    <exec executable="${cmd.bower}" failonerror="true">
      <arg value="install" />
    </exec>
  </target>

  <target name="test">
    <exec executable="${cmd.gulp}" failonerror="true">
      <arg value="test:local" />
    </exec>
  </target>

  <target name="build" depends="init">
    <exec executable="${cmd.gulp}" failonerror="true">
      <arg value="build" />
    </exec>
  </target>

</project>
